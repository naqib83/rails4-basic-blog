<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Created at</th>
        <th>Number of article</th>
        <th>Action </th>
      </tr>

      <% obj.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username%></td>
          <td><%= user.email %></td>
          <td><%= time_ago_in_words(user.created_at) %> ago</td>
          <td><%= pluralize(user.articles.count, 'article') %> </td>
          <td>
            <%= link_to 'Show', user_path(user), class:"btn btn-success btn-xs" %>
            | <%= link_to 'Edit', edit_user_path(user), class:"btn btn-primary btn-xs" %>
            <% if logged_in? and current_user.admin? %>
              | <%= link_to 'Delete', user_path(user), method: :delete,
                      class:"btn btn-danger btn-xs", method: :delete,
                      data:{confirm:"Are you sure you want to delete this user?"} %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>